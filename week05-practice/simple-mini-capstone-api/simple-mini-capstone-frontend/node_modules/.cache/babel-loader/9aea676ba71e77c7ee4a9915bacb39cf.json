{"ast":null,"code":"import axios from \"axios\";\nexport default {\n  data: function () {\n    return {\n      message: \"Welcome to Vue.js!\",\n      products: [],\n      newProductsParams: {},\n      currentProduct: {}\n    };\n  },\n  created: function () {\n    this.indexProducts();\n  },\n  methods: {\n    indexProducts: function () {\n      axios.get(\"http://localhost:3000/products.json\").then(response => {\n        console.log(\"All Products:\", this.products);\n        this.products = response.data;\n      });\n    },\n    createNewProduct: function () {\n      axios.post(\"http://localhost:3000/products.json\", this.newProductsParams).then(response => {\n        console.log(\"Success\", response);\n        this.products.push(response.data);\n        this.newProductsParams = {};\n      });\n    },\n    showProduct: function (product) {\n      console.log(product);\n      document.querySelector(\"#product-details\").showModal();\n      this.currentProduct = product;\n    }\n  }\n};","map":{"version":3,"mappings":"AACA,OAAOA,KAAP,MAAkB,OAAlB;AAEA,eAAe;EACbC,IAAI,EAAE,YAAY;IAChB,OAAO;MACLC,OAAO,EAAE,oBADJ;MAELC,QAAQ,EAAE,EAFL;MAGLC,iBAAiB,EAAE,EAHd;MAILC,cAAc,EAAE;IAJX,CAAP;EAMD,CARY;EASbC,OAAO,EAAE,YAAY;IACnB,KAAKC,aAAL;EACD,CAXY;EAYbC,OAAO,EAAE;IACPD,aAAa,EAAE,YAAY;MACzBP,KAAK,CAACS,GAAN,CAAU,qCAAV,EAAiDC,IAAjD,CAAuDC,QAAD,IAAc;QAClEC,OAAO,CAACC,GAAR,CAAY,eAAZ,EAA6B,KAAKV,QAAlC;QACA,KAAKA,QAAL,GAAgBQ,QAAQ,CAACV,IAAzB;MACD,CAHD;IAID,CANM;IAOPa,gBAAgB,EAAE,YAAY;MAC5Bd,KAAK,CAACe,IAAN,CAAW,qCAAX,EAAkD,KAAKX,iBAAvD,EAA0EM,IAA1E,CAAgFC,QAAD,IAAc;QAC3FC,OAAO,CAACC,GAAR,CAAY,SAAZ,EAAuBF,QAAvB;QACA,KAAKR,QAAL,CAAca,IAAd,CAAmBL,QAAQ,CAACV,IAA5B;QACA,KAAKG,iBAAL,GAAyB,EAAzB;MACD,CAJD;IAKD,CAbM;IAcPa,WAAW,EAAE,UAAUC,OAAV,EAAmB;MAC9BN,OAAO,CAACC,GAAR,CAAYK,OAAZ;MACAC,QAAQ,CAACC,aAAT,CAAuB,kBAAvB,EAA2CC,SAA3C;MACA,KAAKhB,cAAL,GAAsBa,OAAtB;IACD;EAlBM;AAZI,CAAf","names":["axios","data","message","products","newProductsParams","currentProduct","created","indexProducts","me