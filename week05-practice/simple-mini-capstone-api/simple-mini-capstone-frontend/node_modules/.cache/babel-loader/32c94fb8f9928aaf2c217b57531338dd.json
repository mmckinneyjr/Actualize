{"ast":null,"code":"import axios from \"axios\";\nexport default {\n  data: function () {\n    return {\n      message: \"Welcome to Vue.js!\",\n      products: []\n    };\n  },\n  created: function () {\n    this.indexProducts();\n  },\n  methods: {\n    indexProducts: function () {\n      axios.get(\"http://localhost:3000/products.json\").then(response => {\n        console.log(\"All Products:\", this.products);\n        this.products = response.data;\n      });\n    },\n    createNewProduct: function () {\n      var params = {\n        name: \"Camera\",\n        description: \"\",\n        image_url: \"\",\n        price: \"\"\n      };\n      axios.post(\"http://localhost:3000/product.json\", params).then(response => {\n        console.log(\"Success\", response);\n        this.products.push(response.data);\n      });\n    }\n  }\n};","map":{"version":3,"mappings":"AACA,OAAOA,KAAP,MAAkB,OAAlB;AAEA,eAAe;EACbC,IAAI,EAAE,YAAY;IAChB,OAAO;MACLC,OAAO,EAAE,oBADJ;MAELC,QAAQ,EAAE;IAFL,CAAP;EAID,CANY;EAObC,OAAO,EAAE,YAAY;IACnB,KAAKC,aAAL;EACD,CATY;EAUbC,OAAO,EAAE;IACPD,aAAa,EAAE,YAAY;MACzBL,KAAK,CAACO,GAAN,CAAU,qCAAV,EAAiDC,IAAjD,CAAuDC,QAAD,IAAc;QAClEC,OAAO,CAACC,GAAR,CAAY,eAAZ,EAA6B,KAAKR,QAAlC;QACA,KAAKA,QAAL,GAAgBM,QAAQ,CAACR,IAAzB;MACD,CAHD;IAID,CANM;IAOPW,gBAAgB,EAAE,YAAY;MAC5B,IAAIC,MAAK,GAAI;QACXC,IAAI,EAAE,QADK;QAEXC,WAAW,EAAE,EAFF;QAGXC,SAAS,EAAE,EAHA;QAIXC,KAAK,EAAE;MAJI,CAAb;MAOAjB,KAAK,CAACkB,IAAN,CAAW,oCAAX,EAAiDL,MAAjD,EAAyDL,IAAzD,CAA+DC,QAAD,IAAc;QAC1EC,OAAO,CAACC,GAAR,CAAY,SAAZ,EAAuBF,QAAvB;QACA,KAAKN,QAAL,CAAcgB,IAAd,CAAmBV,QAAQ,CAACR,IAA5B;MACD,CAHD;IAID;EAnBM;AAVI,CAAf","names":["axios","data","message","products","created","indexProducts","methods","get","then","response","console","log","createNewProduct","params","name","description","image_url","price","post","push"],"sourceRoot":"","sources":["/Users/codingbootcamp/Documents/Actualize/week05-practice/simple-mini-capstone-api/simple-mini-capstone-frontend/src/views/HomeView.vue"],"sourcesContent":["<script>\nimport axios from \"axios\";\n\nexport default {\n  data: function () {\n    return {\n      message: \"Welcome to Vue.js!\",\n      products: [],\n    };\n  },\n  created: function () {\n    this.indexProducts();\n  },\n  methods: {\n    indexProducts: function () {\n      axios.get(\"http://localhost:3000/products.json\").then((response) => {\n        console.log(\"All Products:\", this.products);\n        this.products = response.data;\n      });\n    },\n    createNewProduct: function () {\n      var params = {\n        name: \"Camera\",\n        description: \"\",\n        image_url: \"\",\n        price: \"\",\n      };\n\n      axios.post(\"http://localhost:3000/product.json\", params).then((response) => {\n        console.log(\"Success\", response);\n        this.products.push(response.data);\n      });\n    },\n  },\n};\n</script>\n\n<template>\n  <div class=\"home\">\n    <h1>{{ message }}</h1>\n    <h2>New Product</h2>\n    <button v-on:click=\"createNewProduct()\">Create</button>\n    <div v-for=\"product in products\" v-bind:key=\"product.id\" style=\"padding: 50px 0px 0px 0px\">\n      <img :src=\"product.image_url\" alt=\"prod\" />\n      <div class=\"name\">{{ product.name }}</div>\n      <div class=\"price\">{{ product.description }}</div>\n      <div class=\"price\">${{ product.price }}</div>\n      <br />\n    </div>\n  </div>\n</template>\n\n<style>\n.name {\n  size: 24px;\n  font-weight: 600;\n  text-align: left;\n}\n.price {\n  size: 18px;\n  text-align: left;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}